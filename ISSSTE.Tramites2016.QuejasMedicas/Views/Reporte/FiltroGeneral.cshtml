</div>
<div class="@Tag.Col(12)" style="height:40px;">&nbsp;</div>
<div class="row col-md-12">
    <div class="pull-right">
        <button type="button" style="text-decoration: none;"
                class="btn btn-default pull-right"
                onclick="MostrarFiltros('A1');">
            <span class="fa fa-eye" aria-hidden="true"></span>&nbsp;&nbsp;Mostrar todos los filtros
        </button>

    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        jsAjaxGenerico("../Catalogo/GetBusquedaTipoTramite", null, "CatTipoTramite");
        jsAjaxGenerico("../Catalogo/GetBusquedaEstadoCita", null, "CatTipoEstado");
        jsMouseOverFiltro();
        jsMouseOutFiltro();
        jsConfiguracionInicialGeneral();
        jsCloseMakerClick();
        $("#CatTipoEstado").css("height", "130px");
    });

</script>