<div class="@Tag.Col(12)" style="height:20px;">&nbsp;</div>
<div class="alert alert-info @Tag.Col(12)">Selecciona los criterios de búsqueda necesarios para la generación del reporte.</div>
<div class="@Tag.Col(12)" style="height:20px;">&nbsp;</div>

<div class="row">   
    @TagReporte.InputRangoFecha(8, "Fecha inicio de la solicitud", "Fecha fin de la solicitud", "FechaRegistro", "", 10, false, "", "Proporcionar sólo un valor en caso de requerir una consulta por fecha")
    @TagReporte.InputRango(4, "Hora inicio solicitud", "Hora fin solicitud","HoraSolicitud", "", 5, false, "", "Proporcionar sólo un valor en caso de requerir una consulta por sólo un parámetro")
